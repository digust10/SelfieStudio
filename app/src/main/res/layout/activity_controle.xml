<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#152f40"
    android:id="@+id/controle_layout">


    <ImageView
        android:id="@+id/image"
        android:layout_width="270dp"
        android:layout_height="211dp"
        android:src="@drawable/image"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pelicula"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/controle_button_layout">

        <Button
            android:id="@+id/tirar_foto"
            android:clickable="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/take_remote_picture_button_custom"/>

    </RelativeLayout>



</RelativeLayout>